// Botones y algunos tipos de inputs[type="submit o reset"]
button
input[type="submit"]
input[type="reset"]
.boton
.comment-reply-link
	background naranja_suave
	border none
	border-radius 4px
	font-family fuente_heading_bold
	color blanco
	cursor pointer
	display inline-block
	padding 0.5em 1em
	text-decoration none
	vertical-align middle
	
button[type="submit"]
input[type="submit"]
	background verde_azulado

button
input[type="submit"]
input[type="reset"]
.boton
.comment-reply-link
	&:hover
	&:focus
		background rosa_suave
		color blanco
