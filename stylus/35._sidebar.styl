// El Sidebar y todo su contenido
.sidebar
	box-sizing border-box
	margin 0
	overflow hidden
	vertical-align top
	
	&__section
		box-sizing border-box
		margin $em
		text-align left

		&__article
			border 1px solid verde_azulado
			box-sizing border-box
			color gris_suave
			line-height 150%
			overflow hidden
			padding 0.5em

			ul
				list-style-image url("../img/Entypo_e766(0)_16.png")
				padding-left 1.4em
			
			ul, ol
				li
					border-bottom 1px solid gris_nube
					margin-bottom 0.25em
					margin-top 0.25em
				
				li.last-child
					border-bottom none

			&__content-left
				display table-cell
				max-width 100px
				min-width 100px
				vertical-align top
				
			&__content-right
				box-sizing border-box
				display table-cell
				padding 0 1em
				vertical-align top
				width 100%

				.sidebar__section_article__subtitle
					margin-top 0
					margin-bottom 0
					a
						text-decoration none

			&__figure
				display block
				margin 0
				max-width 100px
				padding 0
				position relative

				a
					&:after
						color blanco
						content "+"
						display inline-block
						font-size 60px
						line-height 60px
						height 100%
						left 0
						opacity 0
						position absolute
						text-decoration none
						text-align center
						top 0
						transition_comun()
						vertical-align middle
						width 100%
						z-index 2

					&:before
						background verde_azulado
						content ""
						display block
						height 100%
						opacity 0
						position absolute
						transition_comun()
						width 100%

				a
					&:hover
					&:focus
						&:before
							opacity 0.5

						&:after
							top 20px
							opacity 1

					img
						display block
						width 100%
					
			&__post
				border-bottom 1px solid gris_nube
				display table
				margin-bottom 0.5em
				margin-top 0.5em
				padding-bottom 0.5em
				overflow hidden
			
			&__post.first-child
				margin-top 2em

			&__post.last-child
				border-bottom none
				margin-bottom 0

		&__header
			background verde_azulado
			padding 0.5em

			&__title
				color blanco
				font-family fuente_heading_bold
				font-size 0.9em
				margin 0
				padding 0
				text-transform uppercase
	


@media all and (min-width: 900px)
	.sidebar
		display inline-block
		float right
		max-width 30%

		&__section
			margin $em 0

		&__section:first-child
		&__section.first-child
			margin-top 0