// OWL slider
@import "owl-carousel/owl.carousel"
@import "owl-carousel/owl.theme"
@import "owl-carousel/owl.transitions"

// Un slider
.slider
	clear both

	&__item
		figure
			display block
			margin 0

		&__leyenda
			filter unquote("progid:DXImageTransform.Microsoft.gradient( startColorstr='#8002A79E', endColorstr='#8002A79E',GradientType=1 )")
			background rgba(verde_azulado, 0.5)
			color blanco
			left 10%
			padding 1em
			position absolute
			top 10%
			font-family fuente_heading_bold
			font-size 1.5em
	
	// El del los trabajaos realizados
	&__secundario
		box-sizing border-box
		padding 0 0.5em

		.slider__item
			margin 0 0.5em

			figure
				margin 0

				figcaption
					background gris_nube
					border-radius 5em
					color gris_suave
					font-family fuente_heading_bold_italic
					margin-top 2em
					padding 0.5em
					position relative

					&:after
						background gris_nube
						content ""
						height 100px
						left 50%
						margin-left -2px
						margin-right 0 
						width 4px
						position absolute
						top -100px

				a
					display block
					position relative
					text-decoration none
					transition_comun()

					&:before
						filter unquote("progid:DXImageTransform.Microsoft.gradient( startColorstr='#8002A79E', endColorstr='#8002A79E',GradientType=1 )")
						background rgba(verde_azulado, 0.5)
						border-radius 50%
						content ""
						height 0
						left 50%
						opacity 0
						position absolute
						top 50%
						transition_comun()
						width 0
						z-index 3
					
					&:after
						color blanco
						content "+"
						font-family Monospace
						font-size 60px
						height 60px
						line-height 100%
						left 50%
						margin -30px 0 0 -20px
						opacity 0
						position absolute
						text-decoration none
						transition_comun()
						top 0
						width 40px
						z-index 4
					
					&:hover
					&:focus
						&:before
							height 100%
							left 0
							opacity 1
							text-decoration none
							top 0
							width 100%
						&:after
							opacity 1
							top 50%

				img
					border 1px solid gris_nube
					border-radius 50%
					display block
					position relative
					width 100%
					z-index 2
