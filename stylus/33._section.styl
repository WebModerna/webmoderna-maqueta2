// Secciones de la web

// Cuerpos Cruzados
.cruzados
	padding 1em
	margin 0 auto
	max-width 600px

	&__article
		border-bottom 1px solid gris_nube
		box-sizing border-box
		margin 0 0 1em 0
		overflow hidden
	
		&__content
			box-sizing border-box
			line-height 150%
			text-align justify

			ul
				list-style-image url("../img/Entypo_e766(0)_16.png")
				padding-left 1.4em

			&__header
				background naranja_suave
				padding 0.5em 2em 0.5em 0.5em
				position relative
				transition_comun()

				&:after
					color blanco
					content "+"
					font-size 2em
					position absolute
					top 0.25em
					right 0.25em
					text-decoration none
					transition_comun()

				&:hover
				&:focus
					background rosa_suave

					&:after
						transform rotate(180deg)

				&__title
					color blanco
					font-family fuente_heading_bold
					font-size 0.9em
					margin 0
					padding 0
					text-transform uppercase

					a
						color blanco
						display inline-block
						transition all 1.2s ease
						text-decoration none
						&:hover
						&:focus
							margin 0 auto
		
		&__content
		&__figure
			display inline-block
			vertical-align top
		
		&__figure
			box-sizing border-box
			margin 0
			position relative
			overflow hidden

			img
				display block
				width 100%
			
			a:before
				background verde_azulado
				content ""
				display block
				height 100%
				opacity 0
				position absolute
				transition_comun()
				width 100%
			
			a:after
				border none
				color blanco
				content "+"
				display inline-block
				line-height 70%
				font-size 60px
				height 40px
				left 50%
				margin -20px 0 0 -20px
				opacity 0
				position absolute
				text-align center
				text-decoration underline
				transition_comun()
				top 50%
				width 40px
				z-index 2

			a
				display block
				position relative
				&:hover
				&:focus
					&:before
						opacity 0.5

					&:after
						opacity 1
						text-decoration none
	
	&__article.last-child
		border-bottom none

@media all and (min-width: 700px)
	// Cuerpos Cruzados
	.cruzados
		max-width 100%

		&__article
			&__content
				float right
				margin 0 0 0 1%
				max-width 49%

			&__figure
				float left
				margin 0 0 1% 0
				max-width 49%

		// Cambiando el orden
		&__article.nth-child-even
			.cruzados__article__content
				float left
				margin 0 1% 0 0

			.cruzados__article__figure
				float right
				margin 0 0 0 1%
			


// Cuerpos Centrales
.centrales
	position relative
	
	&__article
		max-width 780px
		margin 0 auto
		padding 1.5em
		
		&__content
			line-height 150%
			text-align left

			ul
				list-style-image url("../img/Entypo_e766(0)_16.png")
				padding-left 1.4em

		
		&__figure
			border 1px solid gris_nube
			border-radius 50%
			margin 0 auto 1em auto
			max-width 300px
			overflow hidden

			img
				border-radius 50%
				display block
				width 100%

		&__header
			background rosa_suave
			padding 0.5em

			&__title
				color blanco
				font-size 0.8em
				margin 0
				padding 0
				text-transform uppercase

@media all and (min-width: 700px)
	// Cuerpos Centrales
	.centrales
		&__article
			display inline-block
			margin 0
			vertical-align top
			max-width 25%
