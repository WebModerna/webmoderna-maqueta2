// Entradas, Categorías, Tags, Searchings
.entradas
	box-sizing border-box
	margin 1em
	
	&__article
		border-bottom 1px solid gris_nube
		display table
		margin 1em 0
		padding-bottom 0.5em
		text-align left
		
		&__figure
			display table-cell
			margin 0
			max-width 50px
			min-width 50px
			overflow hidden
			padding 0
			vertical-align top

			a
				display block
				position relative
				text-decoration none
				transition_comun()
				
				&:after
					background rgba(verde_azulado, 0.5)
					content ""
					height 100%
					left 0
					opacity 0
					position absolute
					top 0
					transition_comun()
					width 100%
				
				&:before
					color blanco
					content "+"
					font-family Monospace
					font-size 60px
					height 60px
					line-height 100%
					left 50%
					margin -30px 0 0 -20px
					opacity 0
					position absolute
					text-decoration none
					transition_comun()
					top 10%
					width 40px
					z-index 1
					
				&:hover
				&:focus
					&:after
					&:before
						opacity 1
						text-decoration none
					&:before
						top 50%
						

			img
				display block
				width 100%
				

		&__header
			&__title
				background verde_azulado
				color blanco
				font-size $em
				padding 0
				margin 0
				text-transform uppercase

				a
					color blanco
					display block
					padding 0.25em 50px 0.25em 0.25em
					position relative
					text-decoration none
					transition_comun()

					&:after
						content "+"
						font-family monospace
						font-size 30px
						position absolute
						right 0.5em
						top 0
						transition_comun()

					&:hover
					&:focus
						background rosa_suave
						
						&:after
							transform rotate(180deg)
						

		&__right
			display table-cell
			padding-left 0.5em
			vertical-align top
			width 100%
	
	&__article:last-child
	&__article.last-child
		border-bottom none
	
	&__header
		&__title
			color gris_suave
			padding 0
			margin 0
			font-size $em

@media all and (min-width: 540px)
	.entradas
		&__article
			&__figure
				max-width 100px
				min-width 100px

			&__header
				&__title
					font-size $em

@media all and (min-width: 740px)
	.entradas
		&__article
			&__figure
				max-width 150px
				min-width 150px

// Para eliminar el espacio hacia la izquierda
@media all and (min-width: 1230px)
	.entradas
		margin-left 1px


// Categorizaciones de las entradas
.categorizacion
	border-top 1px dashed gris_suave
	border-top 1px dashed rgba(gris_suave, 0.5)
	color gris_suave
	display table
	margin 0
	padding 0.25em 0
	text-align left
	width 100%

	&__icono
		border-right 1px dashed gris_suave
		border-right 1px dashed rgba(gris_suave, 0.5)
		color verde_azulado
		display table-cell
		padding 0.25em 0.25em 0.25em 0
		vertical-align top
		width 1.5em

	&__list
		display table-cell
		font-family fuente_heading_bold_italic
		font-style italic
		font-weight bolder
		padding-left 0.5em
		vertical-align middle

		&__items
			margin 0
			padding 0

			li
				display inline-block

				a
					background gris_nube
					border-radius 3px
					display inline-block
					padding 0 0.25em
					text-decoration none

					&:first-letter
						text-transform uppercase

					&:hover
					&:focus
						color blanco
						background rosa_suave

	&:first-child
	&.first-child
		border-top none

// Artículos de Páginas
.page
	padding $em
	text-align left
	
	&__article
		&__figure
			border 1px solid plateado
			margin 0 auto 1em auto
			padding 0
			max-width 400px
			
			a
			img
				display block
				width 100%

			a
				position relative
				text-decoration none
				transition_comun()

				&:after
					background rgba(verde_azulado, 0.5)
					content ""
					height 100%
					left 0
					opacity 0
					position absolute
					top 0
					transition_comun()
					width 100%
				
				&:before
					color blanco
					content "+"
					font-family Monospace
					font-size 60px
					height 60px
					line-height 100%
					left 50%
					margin -30px 0 0 -20px
					opacity 0
					position absolute
					text-decoration none
					transition_comun()
					top 0
					width 40px
					z-index 1
					
				&:hover
				&:focus
					&:after
					&:before
						opacity 1
						text-decoration none
					&:before
						top 50%
			
			figcaption
				background gris_nube
				color gris_suave
				font-family fuente_heading_bold_italic
				font-style italic
				font-weight bolder
				padding 0.5em
				text-align center



		&__header
			background rosa_suave
			padding 0.5em

			&__title
				color blanco
				font-family fuente_heading_bold
				font-size $em
				font-weight bolder
				margin 0
				padding 0
				text-transform uppercase

@media all and (min-width: 700px)
	.page
		&__article
			&__figure
				float left
				margin 0.25em 1em 1em 0
				min-width 400px

// Para eliminar el espacio hacia la izquierda
@media all and (min-width: 1230px)
	.page
		padding-left 0